#! /bin/sh -e
### BEGIN INIT INFO
# Provides:          robox
# Default-Start:     2 3 4 5
# Default-Stop:      1
# Short-Description: Start the CARMEN RoboX base module
### END INIT INFO

CARMEN="/etc/init.d/carmen.sh"
ROBOXBASE="/usr/bin/robox"

[ -e "$CARMEN" ] || exit 0
[ -e "$ROBOXBASE" ] || exit 0

. $CARMEN

[ "$CARMEN_START_BASE" == 1 ] || exit 0

case "$1" in
  start)
    echo -n "Starting RoboX base module"
    carmen_start_module "$ROBOXBASE"    
    echo "."
	;;
  stop)
    echo -n "Stopping RoboX base module"
    carmen_stop_module "$ROBOXBASE"    
    echo "."
	;;
  restart)
    echo -n "Restarting RoboX base module"
    carmen_restart_module "$ROBOXBASE"    
    echo "."
  ;;

  *)
	  echo "Usage: /etc/init.d/robox {start|stop|restart}"
	  exit 1
esac

exit 0
