#! /bin/sh -e
### BEGIN INIT INFO
# Provides:          robox
# Default-Start:     2 3 4 5
# Default-Stop:      1
# Short-Description: Start the CARMEN RoboX base module
### END INIT INFO

CARMEN="/etc/init.d/carmen.sh"

[ -e "$CARMEN" ] || exit 0
. $CARMEN
[ "$CARMEN_START_BASE" == 1 ] || exit 0

MODULE_NAME="RoboX base"
MODULE_BIN="/usr/bin/robox"
MODULE_OPTS=""

[ -e "$MODULE_BIN" ] || exit 0

case "$1" in
  start)
    echo -n "Starting $MODULE_NAME module"
    carmen_start_module "$MODULE_BIN" "$MODULE_OPTS"
    echo "."
	;;
  stop)
    echo -n "Stopping $MODULE_NAME module"
    carmen_stop_module "$MODULE_BIN"
    echo "."
	;;
  restart)
    echo -n "Restarting $MODULE_NAME module"
    carmen_restart_module "$MODULE_BIN" "$MODULE_OPTS"
    echo "."
  ;;

  *)
	  echo "Usage: $0 {start|stop|restart}"
	  exit 1
esac

exit 0
