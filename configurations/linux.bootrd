ADDONS="linux-pcore"
CONFIGURE="cp -ua $CFGDIR/linux.$TARGET .config"
MAKEBUILD=("cp -a $ROOTFS arch/$TARGET/boot/images/ramdisk.image"
           "gzip -f arch/$TARGET/boot/images/ramdisk.image"
           "make ARCH=$TARGET CROSS_COMPILE=$TARGET-linux- zImage.initrd")
if [ "$TARGET" == "powerpc" ]; then
  MAKEINSTALL="cp -a arch/$TARGET/boot/images/zImage.initrd.pcore $ROOT/$IMAGE"
else 
  MAKEINSTALL=""
fi
COMMENT="this may take a while"
